<div class=card-columns>
  <% @categories.each do |category| %>
    <div class="card p-4 mb-4">
    
      <p><strong><%= link_to category.name, category_path(category), class: "text-primary"%></strong></p>

      <% category.subcategories.each do |subcategory| %>
        <div class="subcat"><%= link_to subcategory.name, category_path(subcategory) %></div>
      <% end %>
    </div>
  <% end %>
</div>